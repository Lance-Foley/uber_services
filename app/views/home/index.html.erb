<% content_for :full_width, true %>

<div class="min-h-screen">
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-br from-blue-600 to-blue-800 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight">
          Home Services,<br>
          <span class="text-blue-200">On Demand</span>
        </h1>
        <p class="mt-6 text-lg sm:text-xl text-blue-100 max-w-2xl mx-auto">
          Connect with trusted local professionals for snow removal, lawn care, and more.
          Book instantly or get competitive bids from verified providers.
        </p>
        <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center">
          <%= link_to new_registration_path, class: "inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-xl bg-white text-blue-600 hover:bg-blue-50 shadow-lg hover:shadow-xl transition-all" do %>
            Get Started Free
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          <% end %>
          <%= link_to "Sign In", new_session_path, class: "inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-xl border-2 border-white text-white hover:bg-white hover:text-blue-600 transition-all" %>
        </div>
      </div>
    </div>

    <!-- Wave divider -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 120L60 105C120 90 240 60 360 45C480 30 600 30 720 37.5C840 45 960 60 1080 67.5C1200 75 1320 75 1380 75L1440 75V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="white"/>
      </svg>
    </div>
  </div>

  <!-- Services Section -->
  <div class="py-16 sm:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900">Services We Offer</h2>
        <p class="mt-4 text-lg text-gray-600">Professional home services at your fingertips</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Snow Removal -->
        <div class="bg-gradient-to-br from-sky-50 to-blue-50 rounded-2xl p-8 border border-sky-100">
          <div class="w-14 h-14 bg-sky-500 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-3">Snow Removal</h3>
          <p class="text-gray-600 mb-4">Don't let winter slow you down. Get your driveway plowed, sidewalks shoveled, or roof cleared by local pros.</p>
          <ul class="space-y-2 text-gray-700">
            <li class="flex items-center">
              <svg class="w-5 h-5 text-sky-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Driveway Plowing
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-sky-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Sidewalk Shoveling
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-sky-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Roof Snow Clearing
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-sky-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              De-Icing & Salt Treatment
            </li>
          </ul>
        </div>

        <!-- Lawn Care -->
        <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl p-8 border border-green-100">
          <div class="w-14 h-14 bg-green-500 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-3">Lawn Care</h3>
          <p class="text-gray-600 mb-4">Keep your yard looking beautiful year-round with professional lawn care and landscaping services.</p>
          <ul class="space-y-2 text-gray-700">
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Lawn Mowing
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Leaf Raking & Blowing
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Hedge Trimming
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              Garden Weeding & Mulching
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- How It Works Section -->
  <div class="py-16 sm:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900">How It Works</h2>
        <p class="mt-4 text-lg text-gray-600">Get help in three simple steps</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-2xl font-bold text-white">1</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Describe Your Job</h3>
          <p class="text-gray-600">Tell us what you need done, when you need it, and where. Add photos for accurate quotes.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-2xl font-bold text-white">2</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Get Matched</h3>
          <p class="text-gray-600">Book instantly with set pricing or receive competitive bids from verified local providers.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-2xl font-bold text-white">3</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Relax</h3>
          <p class="text-gray-600">Your provider handles the job. Pay securely through the app after the work is done.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Provider CTA Section -->
  <div class="py-16 sm:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gradient-to-r from-gray-900 to-gray-800 rounded-3xl p-8 sm:p-12 lg:p-16">
        <div class="lg:flex lg:items-center lg:justify-between">
          <div class="lg:w-2/3">
            <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">Want to Earn Money?</h2>
            <p class="text-lg text-gray-300 mb-6 lg:mb-0">
              Join as a service provider and start earning. Set your own prices, choose your jobs,
              and get paid quickly. Same account - be both a customer and a provider.
            </p>
          </div>
          <div class="lg:w-1/3 lg:text-right">
            <%= link_to new_registration_path, class: "inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-xl bg-white text-gray-900 hover:bg-gray-100 transition-all" do %>
              Become a Provider
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Trust Section -->
  <div class="py-16 sm:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900">Why Choose Us</h2>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Verified Providers</h3>
          <p class="text-sm text-gray-600">All providers are background checked and verified</p>
        </div>

        <div class="text-center">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Secure Payments</h3>
          <p class="text-sm text-gray-600">Your payment is held safely until the job is complete</p>
        </div>

        <div class="text-center">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Rated & Reviewed</h3>
          <p class="text-sm text-gray-600">Read honest reviews from real customers</p>
        </div>

        <div class="text-center">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Fast Response</h3>
          <p class="text-sm text-gray-600">Get quotes and book services quickly</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer CTA -->
  <div class="py-16 bg-blue-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Ready to get started?</h2>
      <p class="text-lg text-blue-100 mb-8">Join thousands of homeowners getting things done.</p>
      <%= link_to new_registration_path, class: "inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-xl bg-white text-blue-600 hover:bg-blue-50 shadow-lg transition-all" do %>
        Create Your Free Account
      <% end %>
    </div>
  </div>

  <!-- Simple Footer -->
  <footer class="bg-gray-900 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row justify-between items-center">
        <div class="text-gray-400 text-sm mb-4 sm:mb-0">
          &copy; <%= Time.current.year %> Uber Services. All rights reserved.
        </div>
        <div class="flex space-x-6">
          <%= link_to "Sign In", new_session_path, class: "text-gray-400 hover:text-white text-sm" %>
          <%= link_to "Sign Up", new_registration_path, class: "text-gray-400 hover:text-white text-sm" %>
        </div>
      </div>
    </div>
  </footer>
</div>
