<% content_for :page_title, "User Details" %>

<div class="space-y-6">
  <!-- Back link -->
  <div>
    <%= link_to "&larr; Back to Users".html_safe, admin_users_path, class: "text-indigo-600 hover:text-indigo-800" %>
  </div>

  <!-- User Info Card -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-lg font-semibold text-gray-900">User Information</h2>
      <%= link_to "Edit User", edit_admin_user_path(@user), class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 text-sm" %>
    </div>

    <div class="p-6">
      <div class="flex items-start gap-6">
        <div class="h-20 w-20 rounded-full bg-indigo-100 flex items-center justify-center flex-shrink-0">
          <span class="text-indigo-600 font-bold text-2xl">
            <%= @user.first_name&.first&.upcase %><%= @user.last_name&.first&.upcase %>
          </span>
        </div>

        <div class="flex-1 grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-500">Full Name</label>
            <p class="mt-1 text-gray-900"><%= @user.full_name %></p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-500">Email Address</label>
            <p class="mt-1 text-gray-900"><%= @user.email_address %></p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-500">Phone Number</label>
            <p class="mt-1 text-gray-900"><%= @user.phone_number.presence || "Not provided" %></p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-500">Status</label>
            <p class="mt-1">
              <% if @user.active? %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Active</span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Inactive</span>
              <% end %>
            </p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-500">Role</label>
            <p class="mt-1">
              <% if @user.admin? %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">Admin</span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">User</span>
              <% end %>
            </p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-500">Member Since</label>
            <p class="mt-1 text-gray-900"><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Provider Profile (if exists) -->
  <% if @user.provider_profile.present? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Provider Profile</h2>
      </div>

      <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-500">Business Name</label>
          <p class="mt-1 text-gray-900"><%= @user.provider_profile.business_name %></p>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-500">Status</label>
          <p class="mt-1">
            <% if @user.provider_profile.verified? %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Verified</span>
            <% else %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Unverified</span>
            <% end %>
            <% if @user.provider_profile.accepting_jobs? %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800 ml-1">Accepting Jobs</span>
            <% end %>
          </p>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-500">Service Radius</label>
          <p class="mt-1 text-gray-900"><%= @user.provider_profile.service_radius_miles %> miles</p>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-500">Rating</label>
          <p class="mt-1 text-gray-900">
            <%= @user.provider_profile.average_rating || "N/A" %>
            (<%= @user.provider_profile.total_reviews %> reviews)
          </p>
        </div>

        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-gray-500">Bio</label>
          <p class="mt-1 text-gray-900"><%= @user.provider_profile.bio.presence || "No bio provided" %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Properties -->
  <% if @user.properties.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Properties (<%= @user.properties.count %>)</h2>
      </div>

      <div class="divide-y divide-gray-200">
        <% @user.properties.each do |property| %>
          <div class="p-6">
            <div class="flex justify-between items-start">
              <div>
                <h3 class="font-medium text-gray-900">
                  <%= property.name %>
                  <% if property.primary? %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-indigo-100 text-indigo-800 ml-2">Primary</span>
                  <% end %>
                </h3>
                <p class="text-sm text-gray-500 mt-1">
                  <%= property.address_line_1 %><br>
                  <%= property.city %>, <%= property.state %> <%= property.zip_code %>
                </p>
              </div>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                <%= property.property_size&.titleize %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
