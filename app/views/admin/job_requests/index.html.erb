<% content_for :page_title, "Job Requests" %>

<div class="space-y-6">
  <!-- Filters -->
  <div class="bg-white rounded-lg shadow p-6">
    <%= form_with url: admin_job_requests_path, method: :get, class: "flex flex-wrap gap-4 items-end" do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
        <%= select_tag :status, options_for_select([
          ["All Statuses", ""],
          ["Pending", "pending"],
          ["Open for Bids", "open_for_bids"],
          ["Accepted", "accepted"],
          ["Payment Authorized", "payment_authorized"],
          ["In Progress", "in_progress"],
          ["Completed", "completed"],
          ["Payment Released", "payment_released"],
          ["Cancelled", "cancelled"],
          ["Disputed", "disputed"]
        ], params[:status]), class: "rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= submit_tag "Filter", class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 cursor-pointer" %>
        <%= link_to "Clear", admin_job_requests_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
      </div>
    <% end %>
  </div>

  <!-- Job Requests Table -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Service</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Consumer</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Provider</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Requested Date</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @job_requests.each do |job| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              #<%= job.id %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= job.service_type&.name %></div>
              <div class="text-sm text-gray-500"><%= job.service_type&.service_category&.name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= job.consumer&.full_name || "N/A" %></div>
              <div class="text-sm text-gray-500"><%= job.property&.city %>, <%= job.property&.state %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if job.provider %>
                <div class="text-sm font-medium text-gray-900"><%= job.provider.full_name %></div>
              <% else %>
                <span class="text-sm text-gray-500">Not assigned</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <% if job.final_price %>
                <span class="font-medium text-gray-900"><%= number_to_currency(job.final_price) %></span>
              <% elsif job.estimated_price %>
                <span class="text-gray-500">~<%= number_to_currency(job.estimated_price) %></span>
              <% else %>
                <span class="text-gray-400">TBD</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% status_colors = {
                "pending" => "bg-yellow-100 text-yellow-800",
                "open_for_bids" => "bg-blue-100 text-blue-800",
                "accepted" => "bg-indigo-100 text-indigo-800",
                "payment_authorized" => "bg-purple-100 text-purple-800",
                "in_progress" => "bg-cyan-100 text-cyan-800",
                "completed" => "bg-green-100 text-green-800",
                "payment_released" => "bg-emerald-100 text-emerald-800",
                "cancelled" => "bg-gray-100 text-gray-800",
                "disputed" => "bg-red-100 text-red-800"
              } %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= status_colors[job.status] || 'bg-gray-100 text-gray-800' %>">
                <%= job.status&.titleize %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= job.requested_date&.strftime("%b %d, %Y") || "Flexible" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to "View", admin_job_request_path(job), class: "text-indigo-600 hover:text-indigo-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @job_requests.empty? %>
      <div class="text-center py-12">
        <p class="text-gray-500">No job requests found.</p>
      </div>
    <% end %>
  </div>
</div>
