<% content_for :page_title, "Job Request Details" %>

<div class="space-y-6">
  <!-- Back link -->
  <div>
    <%= link_to "&larr; Back to Job Requests".html_safe, admin_job_requests_path, class: "text-indigo-600 hover:text-indigo-800" %>
  </div>

  <!-- Job Info Card -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <div>
        <h2 class="text-lg font-semibold text-gray-900">Job Request #<%= @job_request.id %></h2>
        <p class="text-sm text-gray-500"><%= @job_request.title %></p>
      </div>
      <% status_colors = {
        "pending" => "bg-yellow-100 text-yellow-800",
        "open_for_bids" => "bg-blue-100 text-blue-800",
        "accepted" => "bg-indigo-100 text-indigo-800",
        "payment_authorized" => "bg-purple-100 text-purple-800",
        "in_progress" => "bg-cyan-100 text-cyan-800",
        "completed" => "bg-green-100 text-green-800",
        "payment_released" => "bg-emerald-100 text-emerald-800",
        "cancelled" => "bg-gray-100 text-gray-800",
        "disputed" => "bg-red-100 text-red-800"
      } %>
      <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full <%= status_colors[@job_request.status] || 'bg-gray-100 text-gray-800' %>">
        <%= @job_request.status&.titleize %>
      </span>
    </div>

    <div class="p-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div>
        <label class="block text-sm font-medium text-gray-500">Service Type</label>
        <p class="mt-1 text-gray-900"><%= @job_request.service_type&.name %></p>
        <p class="text-sm text-gray-500"><%= @job_request.service_type&.service_category&.name %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Requested Date</label>
        <p class="mt-1 text-gray-900">
          <%= @job_request.requested_date&.strftime("%B %d, %Y") || "Flexible" %>
          <% if @job_request.flexible_timing? %>
            <span class="text-sm text-gray-500">(Flexible)</span>
          <% end %>
        </p>
        <% if @job_request.requested_time_start && @job_request.requested_time_end %>
          <p class="text-sm text-gray-500">
            <%= @job_request.requested_time_start.strftime("%I:%M %p") %> - <%= @job_request.requested_time_end.strftime("%I:%M %p") %>
          </p>
        <% end %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Urgency</label>
        <% urgency_colors = {
          "normal" => "bg-gray-100 text-gray-800",
          "urgent" => "bg-orange-100 text-orange-800",
          "emergency" => "bg-red-100 text-red-800"
        } %>
        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= urgency_colors[@job_request.urgency] || 'bg-gray-100 text-gray-800' %>">
          <%= @job_request.urgency&.titleize %>
        </span>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Estimated Price</label>
        <p class="mt-1 text-gray-900"><%= number_to_currency(@job_request.estimated_price) if @job_request.estimated_price %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Final Price</label>
        <p class="mt-1 text-xl font-bold text-gray-900"><%= number_to_currency(@job_request.final_price) if @job_request.final_price %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Platform Fee (<%= @job_request.platform_fee_percentage %>%)</label>
        <p class="mt-1 text-green-600 font-medium"><%= number_to_currency(@job_request.platform_fee) if @job_request.platform_fee %></p>
      </div>
    </div>

    <% if @job_request.description.present? %>
      <div class="px-6 pb-6">
        <label class="block text-sm font-medium text-gray-500">Description</label>
        <p class="mt-1 text-gray-900"><%= @job_request.description %></p>
      </div>
    <% end %>
  </div>

  <!-- Parties -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Consumer -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-md font-semibold text-gray-900">Consumer</h3>
      </div>
      <div class="p-6">
        <% if @job_request.consumer %>
          <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-full bg-indigo-100 flex items-center justify-center">
              <span class="text-indigo-600 font-medium">
                <%= @job_request.consumer.first_name&.first&.upcase %><%= @job_request.consumer.last_name&.first&.upcase %>
              </span>
            </div>
            <div>
              <p class="font-medium text-gray-900"><%= @job_request.consumer.full_name %></p>
              <p class="text-sm text-gray-500"><%= @job_request.consumer.email_address %></p>
            </div>
          </div>
          <div class="mt-4">
            <%= link_to "View User", admin_user_path(@job_request.consumer), class: "text-sm text-indigo-600 hover:text-indigo-800" %>
          </div>
        <% else %>
          <p class="text-gray-500">No consumer information</p>
        <% end %>
      </div>
    </div>

    <!-- Provider -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-md font-semibold text-gray-900">Provider</h3>
      </div>
      <div class="p-6">
        <% if @job_request.provider %>
          <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-full bg-green-100 flex items-center justify-center">
              <span class="text-green-600 font-medium">
                <%= @job_request.provider.first_name&.first&.upcase %><%= @job_request.provider.last_name&.first&.upcase %>
              </span>
            </div>
            <div>
              <p class="font-medium text-gray-900"><%= @job_request.provider.full_name %></p>
              <p class="text-sm text-gray-500"><%= @job_request.provider.email_address %></p>
            </div>
          </div>
          <div class="mt-4">
            <%= link_to "View User", admin_user_path(@job_request.provider), class: "text-sm text-indigo-600 hover:text-indigo-800" %>
          </div>
        <% else %>
          <p class="text-gray-500">No provider assigned</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Property -->
  <% if @job_request.property %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-md font-semibold text-gray-900">Property</h3>
      </div>
      <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-500">Name</label>
          <p class="mt-1 text-gray-900"><%= @job_request.property.name %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-500">Address</label>
          <p class="mt-1 text-gray-900">
            <%= @job_request.property.address_line_1 %><br>
            <%= @job_request.property.city %>, <%= @job_request.property.state %> <%= @job_request.property.zip_code %>
          </p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-500">Property Size</label>
          <p class="mt-1 text-gray-900"><%= @job_request.property.property_size&.titleize %></p>
        </div>
        <% if @job_request.property.special_instructions.present? %>
          <div>
            <label class="block text-sm font-medium text-gray-500">Special Instructions</label>
            <p class="mt-1 text-gray-900"><%= @job_request.property.special_instructions %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Timeline -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-md font-semibold text-gray-900">Timeline</h3>
    </div>
    <div class="p-6">
      <ul class="space-y-4">
        <li class="flex items-center gap-3">
          <div class="h-2 w-2 rounded-full bg-gray-400"></div>
          <span class="text-sm text-gray-600">Created: <%= @job_request.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </li>
        <% if @job_request.accepted_at %>
          <li class="flex items-center gap-3">
            <div class="h-2 w-2 rounded-full bg-indigo-400"></div>
            <span class="text-sm text-gray-600">Accepted: <%= @job_request.accepted_at.strftime("%B %d, %Y at %I:%M %p") %></span>
          </li>
        <% end %>
        <% if @job_request.started_at %>
          <li class="flex items-center gap-3">
            <div class="h-2 w-2 rounded-full bg-cyan-400"></div>
            <span class="text-sm text-gray-600">Started: <%= @job_request.started_at.strftime("%B %d, %Y at %I:%M %p") %></span>
          </li>
        <% end %>
        <% if @job_request.completed_at %>
          <li class="flex items-center gap-3">
            <div class="h-2 w-2 rounded-full bg-green-400"></div>
            <span class="text-sm text-gray-600">Completed: <%= @job_request.completed_at.strftime("%B %d, %Y at %I:%M %p") %></span>
          </li>
        <% end %>
        <% if @job_request.cancelled_at %>
          <li class="flex items-center gap-3">
            <div class="h-2 w-2 rounded-full bg-red-400"></div>
            <span class="text-sm text-gray-600">Cancelled: <%= @job_request.cancelled_at.strftime("%B %d, %Y at %I:%M %p") %></span>
            <% if @job_request.cancellation_reason.present? %>
              <span class="text-sm text-gray-500">(<%= @job_request.cancellation_reason %>)</span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- Payments -->
  <% if @job_request.payments.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-md font-semibold text-gray-900">Payments (<%= @job_request.payments.count %>)</h3>
      </div>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amount</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @job_request.payments.each do |payment| %>
            <tr>
              <td class="px-6 py-4 text-sm text-gray-500">#<%= payment.id %></td>
              <td class="px-6 py-4 text-sm font-medium text-gray-900"><%= number_to_currency(payment.amount) %></td>
              <td class="px-6 py-4">
                <% status_colors = {
                  "pending" => "bg-yellow-100 text-yellow-800",
                  "authorized" => "bg-blue-100 text-blue-800",
                  "captured" => "bg-green-100 text-green-800",
                  "released" => "bg-purple-100 text-purple-800",
                  "refunded" => "bg-gray-100 text-gray-800",
                  "failed" => "bg-red-100 text-red-800"
                } %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= status_colors[payment.status] || 'bg-gray-100 text-gray-800' %>">
                  <%= payment.status&.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 text-sm text-gray-500"><%= payment.created_at.strftime("%b %d, %Y") %></td>
              <td class="px-6 py-4 text-right">
                <%= link_to "View", admin_payment_path(payment), class: "text-sm text-indigo-600 hover:text-indigo-800" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <!-- Reviews -->
  <% if @job_request.reviews.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-md font-semibold text-gray-900">Reviews (<%= @job_request.reviews.count %>)</h3>
      </div>
      <div class="divide-y divide-gray-200">
        <% @job_request.reviews.each do |review| %>
          <div class="p-6">
            <div class="flex items-start justify-between">
              <div>
                <p class="font-medium text-gray-900"><%= review.reviewer&.full_name %> reviewed <%= review.reviewee&.full_name %></p>
                <div class="flex items-center gap-1 mt-1">
                  <% review.rating.times do %>
                    <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  <% end %>
                  <% (5 - review.rating).times do %>
                    <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  <% end %>
                  <span class="text-sm text-gray-500 ml-1">(<%= review.rating %>/5)</span>
                </div>
              </div>
              <span class="text-sm text-gray-500"><%= review.created_at.strftime("%b %d, %Y") %></span>
            </div>
            <% if review.comment.present? %>
              <p class="mt-3 text-gray-700"><%= review.comment %></p>
            <% end %>
            <% if review.response.present? %>
              <div class="mt-3 pl-4 border-l-2 border-gray-200">
                <p class="text-sm text-gray-500">Response:</p>
                <p class="text-gray-700"><%= review.response %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
