<% content_for :page_title, "Payments" %>

<div class="space-y-6">
  <!-- Filters -->
  <div class="bg-white rounded-lg shadow p-6">
    <%= form_with url: admin_payments_path, method: :get, class: "flex flex-wrap gap-4 items-end" do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
        <%= select_tag :status, options_for_select([
          ["All Statuses", ""],
          ["Pending", "pending"],
          ["Authorized", "authorized"],
          ["Captured", "captured"],
          ["Released", "released"],
          ["Refunded", "refunded"],
          ["Failed", "failed"]
        ], params[:status]), class: "rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= submit_tag "Filter", class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 cursor-pointer" %>
        <%= link_to "Clear", admin_payments_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
      </div>
    <% end %>
  </div>

  <!-- Payments Table -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Payer</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Payee</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Platform Fee</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @payments.each do |payment| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              #<%= payment.id %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= payment.payer&.full_name || "N/A" %></div>
              <div class="text-sm text-gray-500"><%= payment.payer&.email_address %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= payment.payee&.full_name || "N/A" %></div>
              <div class="text-sm text-gray-500"><%= payment.payee&.email_address %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= number_to_currency(payment.amount) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= number_to_currency(payment.platform_fee) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% status_colors = {
                "pending" => "bg-yellow-100 text-yellow-800",
                "authorized" => "bg-blue-100 text-blue-800",
                "captured" => "bg-green-100 text-green-800",
                "released" => "bg-purple-100 text-purple-800",
                "refunded" => "bg-gray-100 text-gray-800",
                "failed" => "bg-red-100 text-red-800"
              } %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= status_colors[payment.status] || 'bg-gray-100 text-gray-800' %>">
                <%= payment.status&.titleize %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= payment.created_at.strftime("%b %d, %Y") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to "View", admin_payment_path(payment), class: "text-indigo-600 hover:text-indigo-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @payments.empty? %>
      <div class="text-center py-12">
        <p class="text-gray-500">No payments found.</p>
      </div>
    <% end %>
  </div>
</div>
