<% content_for :page_title, "Payment Details" %>

<div class="space-y-6">
  <!-- Back link -->
  <div>
    <%= link_to "&larr; Back to Payments".html_safe, admin_payments_path, class: "text-indigo-600 hover:text-indigo-800" %>
  </div>

  <!-- Payment Info Card -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-lg font-semibold text-gray-900">Payment #<%= @payment.id %></h2>
      <% status_colors = {
        "pending" => "bg-yellow-100 text-yellow-800",
        "authorized" => "bg-blue-100 text-blue-800",
        "captured" => "bg-green-100 text-green-800",
        "released" => "bg-purple-100 text-purple-800",
        "refunded" => "bg-gray-100 text-gray-800",
        "failed" => "bg-red-100 text-red-800"
      } %>
      <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full <%= status_colors[@payment.status] || 'bg-gray-100 text-gray-800' %>">
        <%= @payment.status&.titleize %>
      </span>
    </div>

    <div class="p-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div>
        <label class="block text-sm font-medium text-gray-500">Total Amount</label>
        <p class="mt-1 text-2xl font-bold text-gray-900"><%= number_to_currency(@payment.amount) %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Platform Fee</label>
        <p class="mt-1 text-xl font-semibold text-green-600"><%= number_to_currency(@payment.platform_fee) %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Provider Amount</label>
        <p class="mt-1 text-xl font-semibold text-gray-900"><%= number_to_currency(@payment.provider_amount) %></p>
      </div>
    </div>
  </div>

  <!-- Parties -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Payer -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-md font-semibold text-gray-900">Payer (Consumer)</h3>
      </div>
      <div class="p-6">
        <% if @payment.payer %>
          <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-full bg-indigo-100 flex items-center justify-center">
              <span class="text-indigo-600 font-medium">
                <%= @payment.payer.first_name&.first&.upcase %><%= @payment.payer.last_name&.first&.upcase %>
              </span>
            </div>
            <div>
              <p class="font-medium text-gray-900"><%= @payment.payer.full_name %></p>
              <p class="text-sm text-gray-500"><%= @payment.payer.email_address %></p>
            </div>
          </div>
          <div class="mt-4">
            <%= link_to "View User", admin_user_path(@payment.payer), class: "text-sm text-indigo-600 hover:text-indigo-800" %>
          </div>
        <% else %>
          <p class="text-gray-500">No payer information</p>
        <% end %>
      </div>
    </div>

    <!-- Payee -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-md font-semibold text-gray-900">Payee (Provider)</h3>
      </div>
      <div class="p-6">
        <% if @payment.payee %>
          <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-full bg-green-100 flex items-center justify-center">
              <span class="text-green-600 font-medium">
                <%= @payment.payee.first_name&.first&.upcase %><%= @payment.payee.last_name&.first&.upcase %>
              </span>
            </div>
            <div>
              <p class="font-medium text-gray-900"><%= @payment.payee.full_name %></p>
              <p class="text-sm text-gray-500"><%= @payment.payee.email_address %></p>
            </div>
          </div>
          <div class="mt-4">
            <%= link_to "View User", admin_user_path(@payment.payee), class: "text-sm text-indigo-600 hover:text-indigo-800" %>
          </div>
        <% else %>
          <p class="text-gray-500">No payee information</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Stripe Details -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-md font-semibold text-gray-900">Stripe Details</h3>
    </div>
    <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label class="block text-sm font-medium text-gray-500">Payment Intent ID</label>
        <p class="mt-1 text-sm text-gray-900 font-mono"><%= @payment.stripe_payment_intent_id.presence || "N/A" %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Charge ID</label>
        <p class="mt-1 text-sm text-gray-900 font-mono"><%= @payment.stripe_charge_id.presence || "N/A" %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Transfer ID</label>
        <p class="mt-1 text-sm text-gray-900 font-mono"><%= @payment.stripe_transfer_id.presence || "N/A" %></p>
      </div>

      <% if @payment.failure_reason.present? %>
        <div>
          <label class="block text-sm font-medium text-gray-500">Failure Reason</label>
          <p class="mt-1 text-sm text-red-600"><%= @payment.failure_reason %></p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Timeline -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-md font-semibold text-gray-900">Timeline</h3>
    </div>
    <div class="p-6">
      <ul class="space-y-4">
        <li class="flex items-center gap-3">
          <div class="h-2 w-2 rounded-full bg-gray-400"></div>
          <span class="text-sm text-gray-600">Created: <%= @payment.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </li>
        <% if @payment.authorized_at %>
          <li class="flex items-center gap-3">
            <div class="h-2 w-2 rounded-full bg-blue-400"></div>
            <span class="text-sm text-gray-600">Authorized: <%= @payment.authorized_at.strftime("%B %d, %Y at %I:%M %p") %></span>
          </li>
        <% end %>
        <% if @payment.captured_at %>
          <li class="flex items-center gap-3">
            <div class="h-2 w-2 rounded-full bg-green-400"></div>
            <span class="text-sm text-gray-600">Captured: <%= @payment.captured_at.strftime("%B %d, %Y at %I:%M %p") %></span>
          </li>
        <% end %>
        <% if @payment.released_at %>
          <li class="flex items-center gap-3">
            <div class="h-2 w-2 rounded-full bg-purple-400"></div>
            <span class="text-sm text-gray-600">Released: <%= @payment.released_at.strftime("%B %d, %Y at %I:%M %p") %></span>
          </li>
        <% end %>
        <% if @payment.refunded_at %>
          <li class="flex items-center gap-3">
            <div class="h-2 w-2 rounded-full bg-gray-400"></div>
            <span class="text-sm text-gray-600">Refunded: <%= @payment.refunded_at.strftime("%B %d, %Y at %I:%M %p") %></span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- Related Job Request -->
  <% if @payment.job_request %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-md font-semibold text-gray-900">Related Job Request</h3>
      </div>
      <div class="p-6">
        <p class="text-gray-900">
          <%= @payment.job_request.title %> -
          <span class="text-gray-500">#<%= @payment.job_request.id %></span>
        </p>
        <div class="mt-4">
          <%= link_to "View Job Request", admin_job_request_path(@payment.job_request), class: "text-sm text-indigo-600 hover:text-indigo-800" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
